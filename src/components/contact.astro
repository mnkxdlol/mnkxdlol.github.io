<section id="contact" class="w-full py-20 border-t border-[#ffffff10] bg-[#0e0e0e] relative text-center">
  <div class="max-w-6xl mx-auto px-4 flex flex-col items-center justify-center gap-10">
    
    <div class="space-y-4">
      <h2 class="text-lg text-[var(--sec)] shiny-sec">Let's talk</h2>

      <h3 class="text-4xl md:text-5xl font-bold text-[var(--white)] leading-tight">
        Contact <span id="typed" class="text-[var(--sec)]"></span>
      </h3>

      <button id="copyMail"
        class="text-lg text-[var(--white)] px-6 py-3 border border-[var(--white-icon-tr)] rounded-lg bg-[#1414149c] hover:bg-[#1a1a1a] transition cursor-pointer">
        me@mnk.wtf
      </button>

      <div id="copiedMsg" class="text-sm text-[var(--sec)] opacity-0 transition-opacity duration-300">
        Copied to clipboard!
      </div>
    </div>

  </div>

  <script type="module">
    import TypeIt from "https://cdn.jsdelivr.net/npm/typeit@8.7.1/+esm";
    new TypeIt("#typed", {
      strings: ["me", "for a project", "to collaborate", "to chat ðŸ‘‹"],
      speed: 50,
      breakLines: false,
      loop: true,
    }).go();
  </script>

  <script>
    document.getElementById("copyMail").addEventListener("click", () => {
      navigator.clipboard.writeText("me@mnk.wtf").then(() => {
        const msg = document.getElementById("copiedMsg");
        msg.classList.remove("opacity-0");
        msg.classList.add("opacity-100");
        setTimeout(() => {
          msg.classList.add("opacity-0");
          msg.classList.remove("opacity-100");
        }, 2000);
      });
    });
  </script>
</section>
