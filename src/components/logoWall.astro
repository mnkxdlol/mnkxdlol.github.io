---
const technologies = [
  "luau",
  "python",
  "javascript",
  "C",
  "mysql",
];
const mastered = ["luau", "python"];
---

<div class="relative overflow-x-hidden py-8">
  <div
    class="pointer-events-none absolute inset-y-0 left-0 w-32 bg-gradient-to-r from-[var(--background)] to-transparent z-20"
  ></div>
  <div
    class="pointer-events-none absolute inset-y-0 right-0 w-32 bg-gradient-to-l from-[var(--background)] to-transparent z-20"
  ></div>

  <div class="flex animate-scroll hover:animate-paused gap-12 md:gap-20 w-max">
    {
      [...technologies, ...technologies, ...technologies].map((tech) => {
        const isMastered = mastered.includes(tech);
        return (
          <div class="flex items-center gap-2 group transition-all duration-300">
            <img
              src={`/svg/${tech}.svg`}
              alt={tech}
              class={`h-7 w-auto object-contain transition-transform group-hover:scale-110 opacity-60 ${isMastered ? "rainbow-glow-soft" : ""}`}
              width="30"
              height="30"
              loading="lazy"
            />
            <span class="text-lg font-medium text-[var(--white-icon)]">
              {tech.charAt(0).toUpperCase() + tech.slice(1)}
            </span>
          </div>
        );
      })
    }
  </div>
</div>

<style is:global>
  @keyframes scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }
  .animate-scroll {
    animation: scroll 60s linear infinite;
  }
  @media (min-width: 768px) {
    .animate-scroll { animation-duration: 50s; }
  }

  /* Subtle rainbow glow for mastered techs (no rectangle, just a soft glow) */
  @keyframes rainbow-glow-soft {
    0% { filter: drop-shadow(0 0 4px #ff00cc) drop-shadow(0 0 8px #3333ff); }
    25% { filter: drop-shadow(0 0 4px #00ffcc) drop-shadow(0 0 8px #ffcc00); }
    50% { filter: drop-shadow(0 0 4px #00ccff) drop-shadow(0 0 8px #ff00cc); }
    75% { filter: drop-shadow(0 0 4px #ffcc00) drop-shadow(0 0 8px #00ffcc); }
    100% { filter: drop-shadow(0 0 4px #ff00cc) drop-shadow(0 0 8px #3333ff); }
  }
  .rainbow-glow-soft {
    animation: rainbow-glow-soft 2s linear infinite;
  }
</style>
