---
interface Project {
  title: string;
  link: string;
  preview: string;
  status: string;
  description: string;
  tag?: string;
  linkLabel?: string;
  previewLabel?: string;
}

const projects: Project[] = [
  {
    title: "Brute-force-sim",
    link: "https://github.com/mnkxdlol/Brute-force-sim-v1",
    preview: "https://github.com/mnkxdlol/Brute-force-sim-v1/blob/main/README.md",
    status: "Still in WIP",
    description:
      "This project simulates a brute force attack on a password or hash using standard methods. It's one of my first projects on GitHub, so expect some bugs since it's been a while since I made it.",
    tag: "Security",
    linkLabel: "GitHub",
    previewLabel: "Readme",
  },
  {
    title: "Studio Sortilège",
    link: "https://discord.gg/studiosortilege",
    preview: "https://www.roblox.com/games",
    status: "Lead Developer",
    description:
      "I'm the lead developer and game designer for the Roblox game Ruminate, developed under Studio Sortilège.",
    tag: "Game Dev",
    linkLabel: "Discord",
    previewLabel: "Roblox",
  },
];
---

<section id="projects" class="py-16 border-t border-[#ffffff10] text-[var(--white)]">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My Work</h2>
    <h3 class="text-4xl md:text-5xl font-semibold mb-12">Projects</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
      {projects.map((project) => (
        <div class="bg-[#1414149c] border border-transparent hover:border-[var(--white-icon-tr)] hover:shadow-[0_0_12px_#ffffff20] rounded-2xl p-6 transition duration-300 group">
          <div class="mb-4 flex items-center justify-between">
            <h4 class="text-2xl font-bold">{project.title}</h4>
            <span class={`text-xs px-3 py-1 rounded-full ${
              project.status.includes("Lead") ? "bg-purple-500/20 text-purple-300" : "bg-yellow-500/10 text-yellow-300"
            }`}>
              {project.status}
            </span>
          </div>

          {project.tag && (
            <div class="mb-3 text-xs uppercase text-[var(--white-icon)] tracking-wide">
              #{project.tag}
            </div>
          )}

          <p class="text-sm text-[var(--white)] mb-6 leading-relaxed">{project.description}</p>

          <div class="flex gap-3">
            <a
              href={project.link}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={project.linkLabel}
              class="flex items-center gap-2 text-sm text-[var(--white-icon)] hover:text-white transition duration-300 border border-[var(--white-icon-tr)] px-4 py-2 rounded-lg bg-[#1a1a1a] hover:bg-[var(--white-icon-tr)]"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="w-5 h-5"
              >
                <path d="M24 12L18.3431 17.6569L16.9289 16.2426L21.1716 12L16.9289 7.75736L18.3431 6.34315L24 12ZM2.82843 12L7.07107 16.2426L5.65685 17.6569L0 12L5.65685 6.34315L7.07107 7.75736L2.82843 12ZM9.78845 21H7.66009L14.2116 3H16.3399L9.78845 21Z" />
              </svg>
              {project.linkLabel}
            </a>

            <a
              href={project.preview}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={project.previewLabel}
              class="flex items-center gap-2 text-sm text-[var(--white-icon)] hover:text-white transition duration-300 border border-[var(--white-icon-tr)] px-4 py-2 rounded-lg bg-[#1a1a1a] hover:bg-[var(--white-icon-tr)]"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="w-5 h-5"
              >
                <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
              </svg>
              {project.previewLabel}
            </a>
          </div>
        </div>
      ))}
    </div>

    <a
      href="https://github.com/mnkxdlol"
      target="_blank"
      rel="noopener noreferrer"
      class="mt-14 inline-flex items-center justify-center gap-2 w-full md:w-auto text-[var(--white-icon)] hover:text-white border border-[var(--white-icon-tr)] px-6 py-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)] hover:scale-105 transition"
    >
      <span class="text-md md:text-lg">More projects soon on GitHub</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="w-5 h-5"
      >
        <path
          d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
        />
      </svg>
    </a>
  </div>
</section>
