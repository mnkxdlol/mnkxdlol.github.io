---
interface Project {
  title: string;
  link: string;
  preview: string;
  status: string;
  description: string;
  tag?: string;
  linkLabel?: string;
  previewLabel?: string;
}

const projects: Project[] = [
  {
    title: "Studio Sortilège",
    link: "https://discord.gg/studiosortilege",
    preview: "https://www.roblox.com/games",
    status: "Lead Developer",
    description:
      "Studio Sortilège is a collective of passionate creators on Roblox. We develop immersive and innovative experiences. Join us on Discord or check out our games on Roblox!",
    tag: "Game Dev",
    linkLabel: "Discord",
    previewLabel: "Play on Roblox",
  },
];
---

<section id="projects" class="py-8 md:py-16 border-t border-[#ffffff10] text-[var(--white)]">
  <div class="max-w-5xl mx-auto px-2 sm:px-4">
    <h2 class="text-base sm:text-lg text-[var(--sec)] mb-2 shiny-sec">My Work</h2>
    <h3 class="text-2xl sm:text-4xl md:text-5xl font-semibold mb-8 md:mb-12">Projects</h3>

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 md:gap-10">
      {projects.map((project) => (
        <div class="relative bg-gradient-to-br from-[#23213b] via-[#141414e6] to-[#2a1a3a] border border-[var(--white-icon-tr)] shadow-[0_0_32px_#a259ff60] rounded-2xl p-3 xs:p-4 sm:p-6 md:p-8 transition duration-300 group overflow-hidden flex flex-col">
          {/* Glow effect */}
          <div class="absolute inset-0 pointer-events-none select-none">
            <div class="absolute -top-10 -right-10 w-16 xs:w-24 sm:w-40 h-16 xs:h-24 sm:h-40 bg-purple-400/30 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute -bottom-10 -left-10 w-12 xs:w-16 sm:w-32 h-12 xs:h-16 sm:h-32 bg-purple-700/20 rounded-full blur-2xl animate-pulse"></div>
          </div>
          <div class="mb-4 flex flex-col xs:flex-row xs:items-center xs:justify-between gap-2">
            <h4 class="text-lg xs:text-xl sm:text-3xl font-extrabold text-purple-200 drop-shadow-lg shiny-sec break-words">
              {project.title}
            </h4>
            <span class="text-xs px-3 py-1 rounded-full bg-purple-500/30 text-purple-100 font-semibold shadow whitespace-nowrap">
              {project.status}
            </span>
          </div>

          {project.tag && (
            <div class="mb-3 text-xs uppercase text-purple-300 tracking-wide font-bold">
              #{project.tag}
            </div>
          )}

          <p class="text-xs xs:text-sm sm:text-base text-[var(--white)] mb-4 xs:mb-6 sm:mb-8 leading-relaxed break-words">{project.description}</p>

          <div class="flex flex-col xs:flex-row gap-2 xs:gap-3 sm:gap-4 w-full">
            <a
              href={project.link}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={project.linkLabel}
              class="flex items-center justify-center gap-2 text-xs xs:text-sm font-semibold text-white bg-purple-600/80 hover:bg-purple-500 transition px-3 xs:px-4 py-2 rounded-lg shadow-lg w-full xs:w-auto"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 xs:w-5 h-4 xs:h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
              {project.linkLabel}
            </a>
            <a
              href={project.preview}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={project.previewLabel}
              class="flex items-center justify-center gap-2 text-xs xs:text-sm font-semibold text-purple-200 bg-[#23213b] hover:bg-purple-700/60 transition px-3 xs:px-4 py-2 rounded-lg border border-purple-400/30 w-full xs:w-auto"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 xs:w-5 h-4 xs:h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
              </svg>
              {project.previewLabel}
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
